<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/support_edit_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLine">

    <EditText
        android:id="@+id/enterTask"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/enterTask"
        android:layout_marginTop="-1dp"
        android:background="@color/colorLine"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/enterTask"
            android:layout_marginTop="-1dp"
            android:layout_weight="1"
            android:background="@color/colorLine"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            app:srcCompat="?android:attr/actionModePasteDrawable" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/enterTask"
            android:layout_marginTop="-1dp"
            android:layout_weight="1"
            android:background="@color/colorLine"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            app:srcCompat="?android:attr/alertDialogIcon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/enterTask"
                android:layout_marginTop="-1dp"
                android:layout_weight="1"
                android:background="@color/colorLine"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                app:srcCompat="@mipmap/baseline_inbox_black_36dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="Входящие"
                android:textColor="#888888"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/enterTask"
            android:layout_marginTop="-1dp"
            android:layout_weight="1"
            android:background="@color/colorLine"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            app:srcCompat="@drawable/ic_menu_send" />


    </LinearLayout>
</RelativeLayout>